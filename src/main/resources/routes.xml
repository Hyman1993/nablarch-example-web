<routes>
    <root to="Authentication#index"/>
    <get  path="/action/login" to="Authentication#index"/>
    <post path="/action/login" to="Authentication#login"/>
    <get  path="/action/logout" to="Authentication#logout"/>
    <get  path="/action/project" to="Project#newEntity"/>
    <get  path="/action/projectUpload" to="ProjectUpload#index"/>
    <get  path="/action/project/index" to="Project#index"/>

    <get  path="/api/clients" to="Client#find"/>
    <get  path="/api/industries" to="Industry#find"/>

    <!--↓ for Wildfly :controller/:actionでのマッチにWildflyは対応してない。 -->
    <get path="/action/project/list" to="Project#list" />
    <get path="/action/project/download" to="Project#download" />
    <get path="/action/project/show/:projectId" to="Project#show">
        <requirements>
            <requirement name="projectId" value="\d+$" />
        </requirements>
    </get>

    <get path="/action/project/edit/:projectId" to="Project#edit">
        <requirements>
            <requirement name="projectId" value="\d+$" />
        </requirements>
    </get>
    <post  path="/action/project/confirmOfUpdate" to="Project#confirmOfUpdate"/>
    <post  path="/action/project/update" to="Project#update"/>
    <get   path="/action/project/completeOfUpdate" to="Project#completeOfUpdate"/>
    <post  path="/action/projectUpload/upload" to="ProjectUpload#upload"/>
    <!--↑ for Wildfly-->


    <match path="/action/:controller/:action/:projectId">
        <requirements>
            <requirement name="projectId" value="\d+$" />
        </requirements>
    </match>

    <match path="/action/:controller/:action"/>
</routes>
